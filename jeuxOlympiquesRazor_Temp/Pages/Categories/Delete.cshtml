@page
@model jeuxOlympiquesRazor_Temp.Pages.Categories.DeleteModel

<form method="post">
    <input asp-for="Category.Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-body-tertiary">Suppression ticket</h2>
            <hr />
        </div>        
        <div class="mb-3 row p-2">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-2">
            <label asp-for="Category.Description" class="p-0"></label>
            <input asp-for="Category.Description" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-2">
            <label asp-for="Category.Price" class="p-0"></label>
            <input asp-for="Category.Price" disabled class="form-control" />
        </div>
        <div class="row col-md-4">
            <div class="col-6">
                <a asp-page="/categories/index" class="btn btn-success border form-control">Revenir à la liste</a>
            </div>
            <div class="col-6">
                <button type="submit" class="btn btn-danger border form-control">Supprimer</button>
            </div>
        </div>
    </div>
</form>


