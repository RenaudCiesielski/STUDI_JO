@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-tertiary bg-gradient m-lg-0 py-3 rounded-5">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-body-tertiary">Suppression ticket</h2>
                </div>
            </div>
        </div>
    <div class="card-body p-4">
<form method="post">
    <input asp-for="Id" hidden/>                
                    <div class="border p-3">
                        <div class="mb-3 row p-2">
                            <label asp-for="Name" class="p-0"></label>
                            <input asp-for="Name" disabled class="form-control" />
                        </div>
                        <div class="mb-3 row p-2">
                            <label asp-for="Description" class="p-0"></label>
                            <input asp-for="Description" disabled class="form-control" />
                        </div>
                        <div class="mb-3 row p-2">
                            <label asp-for="Price" class="p-0"></label>
                            <input asp-for="Price" disabled class="form-control" />
                        </div>
                        <div class="row col-md-4">
                            <div class="col-6">
                                <a asp-controller="Category" asp-action="Index" class="btn btn-danger border form-control rounded-5">Revenir à la liste</a>
                            </div>
                            <div class="col-6">
                                <button type="submit" class="btn btn-success border form-control rounded-5">Valider</button>
                            </div>
                        </div>
                    </div>
                </form>
       </div>
   </div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}