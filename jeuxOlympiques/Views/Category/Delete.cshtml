@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-tertiary bg-gradient m-lg-0 py-3 rounded-5">
        <div class="row">
            <div class="col-12 text-center"
                <h2 class="text-white py-2">Suppression ticket</h2>
                <hr />
            </div>
        </div>
    <div class="card-body p-4">
<form method="post">
    <input asp-for="Id" hidden/>
                <form method="post" class="row">
                    <div class="border p-3">
                        <div class="mb-3 row p-2">
                            <label asp-for="Name" class="p-0"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row p-2">
                            <label asp-for="Description" class="p-0"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row p-2">
                            <label asp-for="Price" class="p-0"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="row col-md-4">
                            <div class="col-6">
                                <a asp-controller="Category" asp-action="Index" class="btn btn-danger border form-control rounded-5">Revenir à la liste</a>
                            </div>
                            <div class="col-6">
                                <button type="submit" class="btn btn-success border form-control rounded-5">Valider</button>
                            </div>
                        </div>
                    </div>
                </form>
       </div>
   </div>
